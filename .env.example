# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here

# Bot Settings
BOT_PREFIX=!
BOT_OWNER_ID=your_discord_user_id

# Database Configuration
DATABASE_URL=sqlite:///bot_data.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# Google Sheets Integration (Optional)
GOOGLE_SHEETS_ENABLED=false
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEETS_ID=your_sheet_id_here

# Web Dashboard (Optional)
DASHBOARD_ENABLED=false
DASHBOARD_PORT=5000
DASHBOARD_SECRET_KEY=your_secret_key_here
DASHBOARD_HOST=127.0.0.1

# Moderation Settings
PROFANITY_FILTER_ENABLED=true
SPAM_DETECTION_ENABLED=true
AUTO_MOD_ENABLED=true
ML_MODERATION_ENABLED=false  # Premium feature using model.py

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_COMMANDS_PER_MINUTE=10

# Survey Settings
MAX_SURVEY_QUESTIONS=20
SURVEY_TIMEOUT_HOURS=168  # 1 week

# Auto Roles
AUTO_ROLE_ENABLED=true
NEW_MEMBER_ROLE_NAME=New Member

# Scheduled Messages
SCHEDULED_MESSAGES_ENABLED=true
